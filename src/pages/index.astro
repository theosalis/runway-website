  <script>
    const transitionWrapper = document.getElementById('sunglasses-transition');
    const floatingWrapper = document.getElementById('floating-sunglasses-wrapper');
    const floatingImage = document.getElementById('floating-sunglasses');
    const whiteSection = document.getElementById('sunglasses-white-section');
    const skySection = document.getElementById('sunglasses-sky-section');
    const target = document.getElementById('sunglasses-target');
    const finalCta = document.getElementById('sunglasses-final-cta');

    if (transitionWrapper && floatingWrapper && floatingImage && whiteSection && skySection && target && finalCta) {
      const clamp = (value, min, max) => Math.min(Math.max(value, min), max);
      let ticking = false;

      const updateSunglasses = () => {
        const wrapperTop = transitionWrapper.offsetTop;
        const scrollCenter = window.scrollY + window.innerHeight / 2 - wrapperTop;
        const initialCenter = whiteSection.offsetTop + whiteSection.offsetHeight - 60;
        const targetCenter = skySection.offsetTop + target.offsetTop + target.offsetHeight / 2;
        const distance = Math.max(targetCenter - initialCenter, 1);
        const progress = clamp((scrollCenter - initialCenter) / distance, 0, 1);
        const currentCenter = initialCenter + distance * progress;
        const imageHeight = floatingImage.offsetHeight;

        floatingWrapper.style.top = `${currentCenter - imageHeight / 2}px`;
        floatingImage.style.transform = `scale(${1 - 0.65 * progress})`;
        const showFinalCta = progress >= 0.98;
        finalCta.style.opacity = showFinalCta ? '1' : '0';
        finalCta.style.pointerEvents = showFinalCta ? 'auto' : 'none';

        ticking = false;
      };

      const requestUpdate = () => {
        if (!ticking) {
          ticking = true;
          requestAnimationFrame(updateSunglasses);
        }
      };

      window.addEventListener('scroll', requestUpdate);
      window.addEventListener('resize', requestUpdate);
      requestUpdate();
    }
  </script>

