---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { loanLinks } from '@/data/loanLinks';
---

<BaseLayout title="Business Loans â€” Runway">
  <section class="relative pt-28 md:pt-36 pb-20 bg-white">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h1 class="text-4xl md:text-[56px] lg:text-[64px] font-heading font-light leading-tight text-black mb-6">
          Business loans
        </h1>
        <p class="text-lg md:text-xl text-neutral-800 leading-relaxed mb-8">
          Explore all types of financing
        </p>
        <a href="/apply" class="inline-flex items-center justify-center rounded-lg bg-black text-white px-8 py-4 font-medium hover:bg-black/90 transition-colors">
          Apply Now
        </a>
      </div>

      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {loanLinks.map((loan) => (
            <a
              href={loan.href}
              class="group flex items-center gap-4 rounded-lg p-6 border border-neutral-200 bg-violet-100 hover:border-neutral-300 transition-all duration-200"
            >
              <div class="w-14 h-14 rounded-lg bg-neutral-100 flex items-center justify-center flex-shrink-0">
                {loan.icon === 'building2' && (
                <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"/>
                  <path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"/>
                  <path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"/>
                  <path d="M10 6h4"/>
                  <path d="M10 10h4"/>
                  <path d="M10 14h4"/>
                  <path d="M10 18h4"/>
                  </svg>
                )}
                {loan.icon === 'wrench' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                  </svg>
                )}
                {loan.icon === 'file-text' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                  <polyline points="14 2 14 8 20 8"/>
                  <line x1="16" x2="8" y1="13" y2="13"/>
                  <line x1="16" x2="8" y1="17" y2="17"/>
                  <line x1="10" x2="8" y1="9" y2="9"/>
                  </svg>
                )}
                {loan.icon === 'receipt' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M4 2v20l2-1 2 1 2-1 2 1 2-1 2 1 2-1 2 1V2l-2 1-2-1-2 1-2-1-2 1-2-1-2 1-2-1Z"/>
                  <path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"/>
                  <path d="M12 17V7"/>
                  </svg>
                )}
                {loan.icon === 'file-bar-chart' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                  <polyline points="14 2 14 8 20 8"/>
                  <path d="M12 18v-4"/>
                  <path d="M8 18v-2"/>
                  <path d="M16 18v-6"/>
                  </svg>
                )}
                {loan.icon === 'trending-up' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/>
                    <polyline points="16 7 22 7 22 13"/>
                  </svg>
                )}
                {loan.icon === 'credit-card' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                    <line x1="1" y1="10" x2="23" y2="10"/>
                  </svg>
                )}
                {loan.icon === 'rotate-cw' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M21 12a9 9 0 1 1-3-7L21 8"/>
                    <path d="M21 4v4h-4"/>
                  </svg>
                )}
                {loan.icon === 'briefcase' && (
                  <svg class="w-7 h-7 text-neutral-700" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
                    <rect x="4" y="6" width="16" height="12" rx="2"/>
                  </svg>
                )}
              </div>
            <div class="flex-1 min-w-0">
              <p class="text-base font-semibold text-neutral-900">
                {loan.label}
              </p>
              <p class="text-sm text-neutral-600 mt-1">
                {loan.subtitle}
              </p>
            </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
